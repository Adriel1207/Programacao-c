#include <stdio.h>

int main(){

    int idade = 36;
    float altura = 1.75;
    char opcao = 'S';
    char nome[20] = "Adriel";

    printf(" Altura: %e\n", altura);
    printf(" Opcao: %c\n", opcao);
    printf(" Nome: %s Idade: %d", nome, idade);

    /*

    printf("%formato1 %formato2 % formato3", variavel1, variavel2 , variavel3)

    %d: imprime um inteiro no formato decimal.
    %i: Equivalente a %d.
    %f: Imprime um numero de ponto flutuante no formato padrão.
    %e: Imprime um numero de ponto flutuante na notação científica.
    %s: imprime um único caractere.
    */

}
