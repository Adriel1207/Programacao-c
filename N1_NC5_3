#include <stdio.h>

int main (){

    int idade;
    float altura;
    char opcao;
    // sintaxe scanf
    // scanf("formato1" "formato2, &variavel1, variavel2, ...");
    printf("Entre com sua idade e altura\n");
    scanf("%d %f", &idade, &altura);
    printf("Idade: %d\n", idade);
    printf("Altura: %f\n", altura);
    printf("Entre com a opção\n");
    scanf(" %c", &opcao);
    printf("A opcao é: %c", opcao);
